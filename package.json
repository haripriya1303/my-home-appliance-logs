{
  "name": "home-appliance-tracker",
  "version": "1.0.0",
  "description": "Home Appliance Tracker - Monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@11.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter=home-appliance-backend",
    "dev:frontend": "turbo run dev --filter=home-appliance-frontend",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=home-appliance-backend",
    "build:frontend": "turbo run build --filter=home-appliance-frontend",
    "start": "turbo run start --filter=home-appliance-backend",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=home-appliance-backend",
    "db:migrate": "turbo run db:migrate --filter=home-appliance-backend",
    "db:seed": "turbo run db:seed --filter=home-appliance-backend"
  },
  "devDependencies": {
    "turbo": "^2.2.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.74.0"
  }
}
